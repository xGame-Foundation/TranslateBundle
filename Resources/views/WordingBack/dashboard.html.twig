{% extends "@TerAdmin/Layout/page.html.twig" %}

{% trans_default_domain "TerTranslateBundle" %}

{% block page_title %}{{ 'title.wording_manage'|trans }}{% endblock %}

{% block box_title %}{{ 'title.wording_add'|trans }}{% endblock %}

{% block title %}{{ 'title.wording_add'|trans }}{% endblock %}


{% block content %}

    <div class="row">

        <div class="col-md-6">

            <div class="box box-info">
                <div class="box-header with-border">
                    <i class="fa fa-file-excel-o"></i>
                    <h3 class="box-title">{{ 'dashboard.wording_title_export'|trans }}</h3>
                </div>
                <div class="box-body">
                    <p>{{ 'dashboard.wording_content_export'|trans }}</p>

                </div>
                <div class="box-footer">
                    <a href="{{ path('ter_back_wording_export') }}" class="btn btn-primary">{{ 'template.export'|trans({}, 'TerAdminBundle') }}</a>
                </div>
            </div>

            <div class="box box-danger">
                <div class="box-header with-border">
                    <i class="fa fa-warning"></i>
                    <h3 class="box-title">{{ 'dashboard.wording_title_cache'|trans }}</h3>
                </div>
                <div class="box-body">
                    <p>{{ 'dashboard.clear_cache'|trans }}</p>

                </div>
                <div class="box-footer">
                    <a href="{{ path('ter_back_wording_cache') }}" class="btn btn-danger">{{ 'wording.clear_cache'|trans({}, 'TerTranslateBundle') }}</a>
                </div>
            </div>


        </div>

        <div class="col-md-6">
            <div class="box box-success">
                <div class="box-header with-border">
                    <i class="fa fa-globe"></i>
                    <h3 class="box-title">{{ 'title.wording_add'|trans }}</h3>
                </div>
                <div class="box-body">

                    <form action="{{ path('ter_back_wording_add') }}" {{ form_enctype(wordingForm) }} method="POST">

                        {{ form_widget(wordingForm) }}

                        <div class="form-group">
                            <button type="submit" id="ter_back_wording_form_submit" name="ter_back_wording_form_submit[submit]" class="btn-primary btn">
                                {{ 'form.submit.wording_add'|trans }}
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

{% endblock %}